{
    "name": "adultdate/filament-wirechat",
    "description": "A complete Filament v4 plugin for Wirechat - real-time messaging with private chats and group conversations",
    "keywords": [
        "adultdate",
        "laravel",
        "filamentphp",
        "filament-wirechat",
        "wirechat",
        "chat",
        "messaging",
        "livewire"
    ],
    "homepage": "https://github.com/adultdate/filament-wirechat",
    "support": {
        "issues": "https://github.com/adultdate/filament-wirechat/issues",
        "source": "https://github.com/adultdate/filament-wirechat"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "AdultDate",
            "email": "dev@adultdate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "filament/forms": "^4.0",
        "filament/tables": "^4.0",
        "livewire/livewire": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-livewire": "^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "AdultDate\\FilamentWirechat\\": "src/",
            "Wirechat\\Wirechat\\": "src/",
            "Adultdate\\Wirechat\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AdultDate\\FilamentWirechat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('vendor/bin/testbench') && @php vendor/bin/testbench package:discover --ansi\""
        ],
        "analyse": "phpstan analyse",
        "lint": "pint",
        "refactor": "rector",
        "test": "pest",
        "test:lint": "pint --test",
        "test:refactor": "rector --dry-run"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AdultDate\\FilamentWirechat\\FilamentWirechatServiceProvider"
            ],
            "aliases": {
                "Wirechat": "Adultdate\\Wirechat\\Facades\\Wirechat"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
